<style>
    .dataTable > thead > tr > th[class*="sort"]:before,
    .dataTable > thead > tr > th[class*="sort"]:after {
        content: "" !important;
    }

    .DataTables_sort_icon, .css_right, .ui-icon, .ui-icon-caret-2-n-s {
        display: none !important;
    }

    .dataTables_processing {
        z-index: 3000;
